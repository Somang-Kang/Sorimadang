<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstrumentQuizResultActivity">

    <Button
        android:id="@+id/instQstage0BT2"
        android:layout_width="141dp"
        android:layout_height="62dp"
        android:layout_marginTop="30dp"
        android:text="다시 말하기"
        android:textSize="8pt"
        android:fontFamily="@font/imhyeminbold"
        app:backgroundTint="#FFD89C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView12" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="189dp"
        android:layout_height="199dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instResultTextView"
        app:srcCompat="@drawable/peng_female" />

    <ImageView
        android:id="@+id/instResultBackimageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/backward_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/instStage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/instStage" />

    <TextView
        android:id="@+id/instStage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="쉬움"
        android:textSize="22sp"
        android:fontFamily="@font/imhyeminbold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/instResultTextView"
        android:layout_width="323dp"
        android:layout_height="279dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rectangle_orange"
        android:text="   SUPER\n   PERFECT"
        android:textColor="#FF0000"
        android:textSize="24pt"
        android:fontFamily="@font/imhyeminbold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instStage" />

    <TextView
        android:id="@+id/instResultQuiztextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="문제 수 : "
        android:textSize="10pt"
        android:fontFamily="@font/imhyeminregular"
        app:layout_constraintBottom_toBottomOf="@+id/instResultTextView"
        app:layout_constraintEnd_toEndOf="@+id/instResultTextView"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="@+id/instResultTextView" />

    <TextView
        android:id="@+id/instResultScoretextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="정답 : "
        android:fontFamily="@font/imhyeminregular"
        android:textSize="10pt"
        app:layout_constraintBottom_toTopOf="@+id/instResultQuiztextView"
        app:layout_constraintEnd_toEndOf="@+id/instResultTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/instResultQuiztextView" />

</androidx.constraintlayout.widget.ConstraintLayout>